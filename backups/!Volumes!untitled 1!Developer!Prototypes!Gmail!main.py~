
'''
Retrieve alerts from gmail mailboxes
'''

import imaplib

GMAIL_IMAP_HOST = 'something'
GMAIL_IMAP_PORT = 'something'


def connect() -> imaplib.IMAP4_SSL:
    '''
    Creates an IMAP connection with the gmail servers
    '''
    imap = imaplib.IMAP4_SSL(GMAIL_IMAP_HOST, GMAIL_IMAP_PORT)
    return imap
